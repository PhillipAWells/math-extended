{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "bundler",
		"outDir": "./build",
		"rootDir": "./src",
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"strictBindCallApply": true,
		"alwaysStrict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"allowImportingTsExtensions": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"types": [
			"vitest/globals"
		],
		"lib": [
			"ES2022"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"build"
	]
}