{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "bundler",
		"outDir": "./build",
		"rootDir": "./src",
		"lib": [
			"ES2022"
		],
		"strict": true,
		"allowImportingTsExtensions": false,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"build",
		"src/**/*.test.ts",
		"src/**/*.spec.ts"
	]
}